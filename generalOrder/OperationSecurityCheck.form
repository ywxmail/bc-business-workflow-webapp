<form class="bc-page" data-type='form' style="overflow: auto;"
	data-namespace="bswf.generalOrder.OperationSecurityCheckForm"
	data-js='js:bc_identity,bc-business/bs.js,wf:OperationSecurityCheck2JS_${pd_id}.js'
	data-readonly="<#if readonly??>${readonly}<#else>false</#if>">
	<#if readonly == 'false'>
		<input type="hidden" name="list_osc_applyMatters" data-scope="global" data-type="list"/>
		<table class="ui-widget-content bc-grid" id="applyMatters" cellspacing="0" cellpadding="0" style="margin-bottom:4px;width:100%;border-width:0 0 0 0;">
			<tr class="header row">
				<td class="first" style="width: 1.1em;">序号</td>
				<td class="middle" style="width: 40em;">申请事项</td>
				<td class="middle" style="width: 15em;">审批情况</td>
				<td class="last" style="min-width: 0.01em;border-width:1px 1px 0 1px;"></td>
			</tr>
			<#if list_am_applyMatters??>
			<#list list_am_applyMatters as am>
			<tr class="ui-widget-content row">
				<td class="first" >${am.id!}</td>
				<td class="middle" style="margin:0;padding:2 0 0 0px;">
					<input type="text" class="ignore" style="width:100%;height:100%;border:none;padding:0 0 0 2px;" value="${am.matter!}" readonly="readonly" >
				</td>
				<td class="middle" style="margin:0;padding:2 0 0 0px;">
					<input type="text" class="ignore" style="width:100%;height:100%;border:none;padding:0 0 0 2px;" placeholder="这里输入情况">
				</td>
				<td class="last" style="border-width:1px 1px 0 1px;"></td>
			</tr>
			</#list>
			</#if>
		</table>
		<div style="padding-left:0.5em;">
			<input type="hidden" name="is_umi_flow" data-scope="global" value="true" data-type="boolean"/>
			<input type="hidden" name="oscHanding" data-scope="global" />
			确认下一步的处理方式：
			<input type="radio"  name="osc_handing" class="ignore" value="送部门经理落实执行" checked style="width:auto;" />
			<label>送部门经理落实执行</label>
			<input type="radio"  name="osc_handing" class="ignore" value="送分管副总审批"  style="width:auto;" />
			<label>送分管副总审批</label>
		</div>
		<div id="inCharDeputyGeneralManagerCheck" style="display:none;padding-left:0.5em;">
			分管副总经理：<div class="label relative" style="display:inline-block;">
					<input type="text"   name="inChargeDeputyGeneralManagerName" data-scope="global" class="ignore ui-widget-content"  readonly="readonly"/>
		          	<input type="hidden" name="inChargeDeputyGeneralManager"     data-scope="global" class="ignore"/>
				    <ul class="inputIcons" >
						<li class="inputIcon ui-icon ui-icon-circle-plus"
						 title='点击选择' id="selectInChargeDeputyGeneralManager"></li>
					</ul>
				</div>
		</div>
	<#else>	
		<table class="ui-widget-content bc-grid" id="applyMatters" cellspacing="0" cellpadding="0" style="margin-bottom:4px;width:100%;border-width:0 0 0 0;">
			<tr class="header row">
				<td class="first" style="width: 1.1em;">序号</td>
				<td class="middle" style="width: 40em;">申请事项</td>
				<td class="middle" style="width: 15em;">审批情况</td>
				<td class="last" style="min-width: 0.01em;border-width:1px 1px 0 1px;"></td>
			</tr>
			<#if list_osc_applyMatters??>
				<#list list_osc_applyMatters as am>
					<tr class="ui-widget-content row">
						<td class="first" >${am.id!}</td>
						<td class="middle" style="margin:0;padding:2 0 0 0px;">
							${am.matter!}
						</td>
						<td class="middle" style="margin:0;padding:2 0 0 0px;">
							${am.check!}
						</td>
						<td class="last" style="border-width:1px 1px 0 1px;"></td>
					</tr>
				</#list>
			<#else>
				<#list list_am_applyMatters as am>
					<tr class="ui-widget-content row">
						<td class="first" >${am.id!}</td>
						<td class="middle" style="margin:0;padding:2 0 0 0px;">
							${am.matter!}
						</td>
						<td class="middle" style="margin:0;padding:2 0 0 0px;">
						</td>
						<td class="last" style="border-width:1px 1px 0 1px;"></td>
					</tr>
				</#list>
			</#if>
		</table>
		<div style="padding-left:0.5em;">
			确认下一步的处理方式：${oscHanding!}
		</div>
		<#if inChargeDeputyGeneralManagerName??>
			<div style="padding-left:0.5em;">
				分管副总经理：${inChargeDeputyGeneralManagerName!}
			</div>
		</#if>
	</#if>
</form>