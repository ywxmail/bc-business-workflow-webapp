<form class="bc-page" data-type='form' style="overflow: auto;"
	data-namespace="bswf.carRetired.BGLeaderConfirmForm"
	data-js='bc-business-workflow/carRetired/BGLeaderConfirm.js'
	data-readonly="<#if readonly??>${readonly}<#else>false</#if>">
	<#if readonly == 'false'>
		<div style="padding-left:0.5em;">
			<div style="display:inline-block;vertical-align:top;">主管意见：</div>
			<textarea name="bglcDesc"  data-scope="global" rows="3" style="width:80%;" class="ui-widget-content noresize" ></textarea>
		</div>
	<#else>
		<div  style="padding-left:0.5em;">
			<div style="display:inline-block;vertical-align:top;">主管意见：</div>
			${bglcDesc!}	
		</div>
	</#if>
</form>