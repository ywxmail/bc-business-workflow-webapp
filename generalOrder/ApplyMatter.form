<form class="bc-page" data-type='form' style="overflow: auto;"
	data-namespace="bswf.generalOrder.ApplyMatterForm"
	data-js='js:bc_identity,bc-business/bs.js,wf:ApplyMatter2JS_${pd_id}.js'
	data-readonly="<#if readonly??>${readonly}<#else>false</#if>">
	<#if readonly == 'false'>
		<table cellspacing="4" cellpadding="0" style="width:100%;min-width: 400px;">
			<tr>
				<td class="label" style="min-width: 3.5em;width: 6em;">*事项标题：</td>
				<td class="value" style="min-width: 18em;">
					<input type="text" name="subject" class="ui-widget-content" data-scope="global"
						data-validate="required" />
				</td>
				<td class="label" style="min-width: 6em;width: 6em;">*申请部门：</td>
				<td class="value relative" style="width: 6em;">
					<input type="text" name="verifyUnitName"
						class="ui-widget-content" readonly="readonly" data-validate="required" data-scope="global"/>
					<input type="hidden" name="verifyUnitId" data-scope="global" data-type="long"/>
					<ul class="inputIcons">
						<li id="selectUnit" class="inputIcon ui-icon ui-icon-circle-plus" title='选择分公司'></li>
					</ul>
				</td>
				<td class="label" style="min-width: 6em;width: 6em;" >*部门经理：</td>
				<td class="value relative" style="width: 6em;">
					<input type="text" name="unitManagerName" class="ui-widget-content" data-validate="required"
				          data-scope="global" readonly="readonly"/>
		          	<input type="hidden" name="unitManager" data-scope="global"/>
				    <ul class="inputIcons" >
						<li class="inputIcon ui-icon ui-icon-circle-plus"
						 title='点击选择' id="selectUnitManager"></li>
					</ul>
				</td>
			</tr>
		</table>
		<input type="hidden" name="sponser" data-scope="global" value="${initiator}"/>
		<div class="" style="position:relative;border-width: 0;padding: 0.25em;">
			<span class="text">申请事由:</span>
			<ul class="inputIcons">
				<li id="upLine" class="inputIcon ui-icon ui-icon-circle-arrow-n" title='上移选中项'></li>
				<li id="downLine" class="inputIcon ui-icon ui-icon-circle-arrow-s" title='下移选中项'></li>
				<li id="addLine" class="inputIcon ui-icon ui-icon-circle-plus" title='添加事项'></li>
				<li id="deleteLine" class="inputIcon ui-icon ui-icon-circle-close" title='删除事项'></li>
			</ul>
		</div>
		<input type="hidden" name="list_am_applyMatters" data-scope="global" data-type="list"/>
		<table class="ui-widget-content bc-grid" id="applyMatters" cellspacing="0" cellpadding="0" style="margin-bottom:4px;width:100%;border-width:1px 0 0 0;">
			<tr class="header row">
				<td class="first"  style="width: 1.1em;">&nbsp;</td>
				<td class="middle" style="width: 40em;">申请事项</td>
				<td class="middle" style="width: 15em;">备注</td>
				<td class="last"   style="min-width: 0.01em;border-width:1px 1px 0 1px;"></td>
			</tr>
		</table>
	<#else>	
		<table cellspacing="4" cellpadding="0" style="width:100%;min-width: 400px;">
			<tr>
				<td class="label" style="min-width: 3.5em;width: 6em;">事项标题：</td>
				<td class="value" style="min-width: 18em;">${subject!}</td>
				<td class="label" style="min-width: 6em;width: 6em;">申请部门：</td>
				<td class="value relative" style="width: 6em;">${verifyUnitName!}</td>
				<td class="label" style="min-width: 6em;width: 6em;" >部门经理：</td>
				<td class="value relative" style="width: 6em;">${unitManagerName!}</td>
			</tr>
		</table>
		<div class="" style="position:relative;border-width: 0;padding: 0.25em;">
			<span class="text">申请事由:</span>
		</div>
		<input type="hidden" name="list_am_applyMatters" data-scope="global" data-type="list"/>
		<table class="ui-widget-content bc-grid" cellspacing="0" cellpadding="0" style="margin-bottom:4px;width:100%;border-width:0 0 0 0;">
			<tr class="header row">
				<td class="first" style="width: 1.1em;border-top:1px solid #CCC;">&nbsp;</td>
				<td class="middle" style="width: 40em;border-top:1px solid #CCC;">申请事项</td>
				<td class="middle" style="width: 15em;border-top:1px solid #CCC;">备注</td>
				<td class="last" style="min-width: 0.01em;border-width:1px 1px 0 1px;"></td>
			</tr>
			<#if list_am_applyMatters??>
			<#list list_am_applyMatters as am>
			<tr class="ui-widget-content row">
				<td class="first" >${am.id!} </td>
				<td class="middle" style="margin:0;padding:2 0 0 0px;">
					<div class="text">${am.matter!}</div>
				</td>
				<td class="last" style="margin:0;padding:2 0 0 0px;">
					<div class="text">${am.desc!}</div>
				</td>
				<td class="middle" style="border-width:1px 1px 0 1px;"></td>
			</tr>
			</#list>
			</#if>
		</table>
	</#if>
</form>