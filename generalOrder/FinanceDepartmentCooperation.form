<form class="bc-page" data-type='form' style="overflow: auto;"
	data-namespace="bswf.generalOrder.FinanceDepartmentCooperationForm"
	data-js='js:bc_identity,bc-business/bs.js,wf:FinanceDepartmentCooperation2JS_${pd_id}.js'
	data-readonly="<#if readonly??>${readonly}<#else>false</#if>">
	<#if readonly == 'false'>
		<input type="hidden" name="list_fdc_applyMatters" data-scope="global" data-type="list"/>
		<input type="hidden" name="list_fdc_applyMatters2local" data-type="list"/>
		<table class="ui-widget-content bc-grid" id="applyMatters" cellspacing="0" cellpadding="0" style="margin-bottom:4px;width:100%;border-width:0 0 0 0;">
			<tr class="header row">
				<td class="first" style="width: 1.1em;">序号</td>
				<td class="middle" style="width: 40em;">申请事项</td>
				<td class="middle" style="width: 15em;">协办意见</td>
				<td class="last" style="min-width: 0.01em;border-width:1px 1px 0 1px;"></td>
			</tr>
			<#if list_am_applyMatters??>
			<#list list_am_applyMatters as am>
			<tr class="ui-widget-content row">
				<td class="first" >${am.id!}</td>
				<td class="middle" style="margin:0;padding:2 0 0 0px;">
					<input type="text" class="ignore" style="width:100%;height:100%;border:none;padding:0 0 0 2px;" value="${am.matter!}" readonly="readonly" >
				</td>
				<td class="middle" style="margin:0;padding:2 0 0 0px;">
					<input type="text" class="ignore" style="width:100%;height:100%;border:none;padding:0 0 0 2px;" placeholder="这里输入协办意见" >
				</td>
				<td class="last" style="border-width:1px 1px 0 1px;">
				</td>
			</tr>
			</#list>
			</#if>
		</table>
	<#else>	
		<table class="ui-widget-content bc-grid" cellspacing="0" cellpadding="0" style="margin-bottom:4px;width:100%;border-width:0 0 0 0;">
			<tr class="header row">
				<td class="first" style="width: 1.1em;">序号</td>
				<td class="middle" style="width: 40em;">申请事项</td>
				<td class="middle" style="width: 15em;">协办意见</td>
				<td class="last" style="min-width: 0.01em;border-width:1px 1px 0 1px;"></td>
			</tr>
			<#if list_fdc_applyMatters2local??>
				<#list list_fdc_applyMatters2local as am>
					<tr class="ui-widget-content row">
						<td class="first" >${am.id!}</td>
						<td class="middle" style="margin:0;padding:2 0 0 0px;">
							${am.matter!}
						</td>
						<td class="middle" style="margin:0;padding:2 0 0 0px;">
							${am.view!}
						</td>
						<td class="last" style="border-width:1px 1px 0 1px;">
						</td>
					</tr>
				</#list>
			<#else>
				<#list list_am_applyMatters as am>
					<tr class="ui-widget-content row">
						<td class="first" >${am.id!}</td>
						<td class="middle" style="margin:0;padding:2 0 0 0px;">
							${am.matter!}
						</td>
						<td class="middle" style="margin:0;padding:2 0 0 0px;">
						</td>
						<td class="last" style="border-width:1px 1px 0 1px;">
						</td>
					</tr>
				</#list>
			</#if>
		</table>
	</#if>
</form>